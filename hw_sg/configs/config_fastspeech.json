{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "FastSpeech",
    "args": {
      "vocab_size": 300,
      "max_seq_len": 3000,
  
      "encoder_dim" : 256,
      "encoder_n_layer": 4,
      "encoder_head": 2,
      "encoder_conv1d_filter_size": 1024,
  
      "decoder_dim": 256,
      "decoder_n_layer": 4,
      "decoder_head": 2,
      "decoder_conv1d_filter_size" : 1024,
  
      "fft_conv1d_kernel" :[9, 1],
      "fft_conv1d_padding" : [4, 0],
  
      "duration_predictor_filter_size": 256,
      "duration_predictor_kernel_size": 3,
      "dropout": 0.1,
      
      "PAD":  0,
      "UNK": 1,
      "BOS": 2,
      "EOS": 3,
  
      "PAD_WORD": "<blank>",
      "UNK_WORD": "<unk>",
      "BOS_WORD" :"<s>",
      "EOS_WORD": "</s>",

      "num_mels": 80
    }
  },
  "data": {
    "train": {
      "batch_size": 32,
      "num_workers": 8,
      "batch_expand_size" :3,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "mel_ground_truth": "./mels",
            "alignment_path": "./alignments",
            "data_path": "./data/train.txt",
            "text_cleaners": ["english_cleaners"]
          }
        }
      ]
  }
},
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 1e-3
    }
  },
  "loss": {
    "type": "FastSpeechLoss",
    "args": {}
  },
  "metrics": [],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch":1000,
      "epochs":10,
      "anneal_strategy": "cos",
      "max_lr": 1e-3,
      "pct_start": 0.1
    }
  },
  "trainer": {
    "epochs": 10,
    "save_dir": "saved/",
    "save_period": 1000,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "FastSpeech_project",
    "wandb_name" : "FastSpeechTry",
    "len_epoch": 1000,
    "grad_norm_clip": 1
  }
}
