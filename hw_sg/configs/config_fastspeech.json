{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "LSTM_Linear",
    "args": {
      "n_feats": 128,
      "fc_hidden": 128,
      "num_layers":3
    }
  },
  "data": {
    "train": {
      "batch_size": 64,
      "num_workers": 1,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "mel_ground_truth": "./mels",
            "alignment_path": "./alignments",
            "data_path": "./data/train.txt",
            "text_cleaners": ["english_cleaners"],
            "batch_expand_size" :32
          }
        }
      ]
  }
},
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [],
  "lr_scheduler": {
    "type": "ReduceLROnPlateau",
    "args": {
      "factor":0.5,
      "patience":5
    }
  },
  "trainer": {
    "epochs": 100,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}
